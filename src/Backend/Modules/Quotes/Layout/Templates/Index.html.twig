{% extends '/Layout/Templates/base.html.twig' %}
{% import "Layout/Templates/macros.html.twig" as macro %}

{% block actionbar %}
  {% if showQuotesAdd %}
    <div class="btn-toolbar pull-right">
      <div class="btn-group" role="group">
        {{ macro.buttonIcon( geturl('add'), 'plus-square', 'lbl.AddQuote'|trans|capitalize) }}
      </div>
    </div>
  {% endif %}
{% endblock %}

{% block content %}
  <div class="row fork-module-content">
    <div class="col-md-12">
      {% if dataGrid %}
        <div class="table-responsive">
          {{ dataGrid|raw }}
        </div>
      {% endif %}
      {% if not dataGrid %}
        <p>{{ 'msg.NoItems'|trans|capitalize }}</p>
      {% endif %}
    </div>
  </div>
{% endblock %}

